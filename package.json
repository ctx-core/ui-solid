{
	"name": "@ctx-core/ui-solid",
	"version": "1.1.0",
	"description": "ctx-core Solidjs components",
	"keywords": [
		"ctx-core"
	],
	"homepage": "https://github.com/ctx-core/ui-solid#readme",
	"bugs": {
		"url": "https://github.com/ctx-core/ui-solid/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ctx-core/ui-solid.git"
	},
	"license": "Apache-2.0",
	"author": "Brian Takita",
	"type": "module",
	"module": "./src/index.js",
	"types": "./src/index.d.ts",
	"svelte": "./src/index.js",
	"scripts": {
		"build": "npm-run-all --parallel build:vite build:types",
		"build:types": "tsc --build",
		"build:vite": "vite build -c vite.config.ts",
		"clean": "rimraf lib",
		"exec": "$@",
		"prepublishOnly": "npm run clean && npm run build && npm run test",
		"test": "pnpm test-unit && check-dts",
		"test-unit": "tsx node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
		"test-unit-coverage": "c8 pnpm test-unit"
	},
	"dependencies": {
		"@ctx-core/object": "^22.2.4",
		"solid-js": "^1.4.8"
	},
	"devDependencies": {
		"@babel/core": "^7.18.10",
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.223",
		"c8": "^7.12.0",
		"check-dts": "^0.6.7",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"solid-js": "^1.4.8",
		"tsx": "^3.8.0",
		"typescript": "next",
		"uvu": "^0.5.6",
		"vite": "^3.0.4",
		"vite-plugin-solid": "^2.3.0"
	},
	"publishConfig": {
		"access": "public",
		"cache": "~/.npm"
	},
	"sideEffects": false
}
